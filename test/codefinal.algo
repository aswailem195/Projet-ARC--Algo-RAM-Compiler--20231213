//echange les éléments des cases d'indices i et j
ALGO ECHANGER( @T,i,j)
VAR temp
DEBUT
	temp <- T[i]
	T[i] <- T[j]
	T[j] <- temp
FIN

// Renvoie l'indice de la plus petite valeur du tableau 'T' entre 'i' et 'n'	
ALGO Selection( @T, n, i )
VAR imin <- i
DEBUT
	i <- i+1
	TQ i < n FAIRE
	   SI T[imin] > T[i] ALORS
	      imin <- i
	   FSI
	   i <- i+1
	FTQ
	RENVOYER imin
FIN

PROGRAMME()
VAR taille, @T
VAR i, imin ,buf
DEBUT
	//stockage des donnees dans un tableau dynamique
	//taille <- LIRE()
	// mon aloation just marche avec NB 
	ALLOUER( T, 5 )
	taille <- 5
	
	i <- 0
	TQ i < taille FAIRE
	   buf <- LIRE()
	   T[i] <- buf 
	   // a ce mement il marche just avec VAR ou NB
	   //T[i] <- LIRE()
	   i <- i+1
	FTQ

	//Tri selection
	i <- 0
	TQ i < taille FAIRE

	   buf <- Selection(T, taille, i)
	   ECHANGER( T, i, buf)
	   i <- i+1
	FTQ

	//Affichage du tableau trie
	i <- 0
	TQ i < taille FAIRE
	   ECRIRE(T[i])
	   i <- i+1
	FTQ
	
	RENVOYER 0
FIN